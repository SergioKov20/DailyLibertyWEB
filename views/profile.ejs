<!DOCTYPE html>
<html>
    <head>
        <meta charset='UTF-8'>
        <meta name='viewport' min-width="20%" content='width=device-width,initial-scale=1,maximum-scale=1'/>
        <link rel='stylesheet' href='../public/css/profile.css'>
        <script src="https://code.jquery.com/jquery-3.2.1.js"  integrity="sha256-DZAnKJ/6XZ9si04Hgrsxu/8s717jcIzLy3oi35EouyE=" crossorigin="anonymous"></script>
        <link href="https://fonts.googleapis.com/css?family=Roboto+Slab" rel="stylesheet">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    </head>
    <body id="prueba">
        <header  class="capsaHeader">
            <ul class="barraSuperior">
                <li id="btnMostrarNav" class="imgMenu">
                    <img src="../public/img/menuBlanco.png"/>
                </li>
                <li class="cajaLogo">
                    <a class="logo" href="/">DailyLiberty</a>
                </li>
                <li id="buscador" class="buscador">
                    <input id="search" type="search" placeholder="Buscar" hidden></input>
                    <button id="botonSearch" class="botonSearch" hidden>
                        <img src="../public/img/lupaBuscador.png"/>
                    </button>
                </li>
                <li class="login">
                    <div class="dropLogin">
                        <button class="dropBoton">Login</button>
                        <% if (isLoggedIn == true) { %>
                            <div class="dropContingut">
                                <a href="/profile" >Veure Perfil</a>
                                <a href="/newarticle">Escriure Article</a>
                                <a href="/logout">Log Out</a>
                            </div>
                        <%} else {%>
                            <div class="dropContingut">
                                <a href="/login" >Sign In</a>
                                <a href="/register">Register</a>
                            </div>
                        <% } %>
                    </div>
                </li>
            </ul>
        </header>
        <section id ="cajasArticulos" class="cajas">
          <div id="divFondo"></div>
          <nav>
              <ul class="menu">
                  <li><a href="#">Inici</a></li>
                  <li><a href="tendencies.html">Tendències</a></li>
                  <li><a data-toggle="collapse" href="#collapse1">Categories</a></li>
                  <div id="collapse1" class="collapse">
                      <div class="panel-body">
                          <a href="principal.html">Política</a>
                          <a href="principal.html">Esports</a>
                          <a href="principal.html">Ciència</a>
                        <a href="principal.html">Tecnologia</a>
                        <a href="principal.html">Altres</a>
                      </div>
                  </div>
                  <li><a href="#">Subscripcions</a></li>
              </ul>
          </nav>

          <!-- Sergio bootstrap -->
          <div id="perfil" class="container perso">
               <div class="row">
                   <div class="col-lg-12">
                       <h1 class="t1">My profile:
                         <img style="cursor:pointer" height="25px" width="25px" src="../public/img/pencil-icon.png" alt="EDIT" onclick="switchtoedit()">
                       </h1>
                   </div>
               </div>
              <div class="row mb25">
               <div class="col-lg-6">
                 <div class="form-group">
                   <p><b>· Username: </b> <%=user.username %></p>
                 </div>
                 <div class="form-group">
                   <p><b>· Full name: </b> <%=user.firstName + " " + user.lastName %></p>
                 </div>
                 <div class="form-group">
                   <p><b>· Email: </b> <%=user.email %></p>
                 </div>
                 <div class="form-group">
                   <p><b>· Birth date:</b></p>
                 </div>
                 <div class="form-group">
                   <p><b>· Articles written:</b></p>
                 </div>
                 <div class="form-group">
                   <p><b>· Average rating:</b></p>
                 </div>
                 <div class="form-group">
                   <p><b>· Followers:</b></p>
                 </div>
                 <div class="form-group">
                   <p><b>· About me:</b></p>
                 </div>
               </div>
               <div class="col-lg-6">
                 <div class="form-group">
                   <label for="mypic">Foto:</label><br>
                   <img width="150px" height="150px" src="https://www.drupal.org/files/profile_default.jpg" alt="pic">
                 </div>
               </div>
             </div>
           </div>

          <!--versió cutre-->
           <div id="editar" class="container perso" style="display: none">
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="t1">Edit my profile:</h1>
                    </div>
                </div>
                <div class="row mb25">
                  <div class="col-lg-6">
                    <div class="form-group">
                      <label for="fullname">username:</label>
                      <textarea style="resize: none; cursor: default" class="form-control h35" id="ta0" name="username" disabled><%=user.username %></textarea>
                    </div>
                    <div class="form-group">
                      <label for="fullname">Full name:</label>
                      <textarea class="form-control h35" id="ta1" style="resize: none" name="fullname"><%=user.firstName + " " + user.lastName %></textarea>
                    </div>
                    <div class="form-group">
                      <label for="mymail">Email:</label>
                      <textarea class="form-control h35" id="ta2" style="resize: none" name="mymail"><%=user.email %></textarea>
                    </div>
                    <div class="form-group">
                      <label for="mydate">Birth date:</label>
                      <textarea class="form-control h35" id="ta3" style="resize: none" name="mybirth"></textarea>
                    </div>
                    <div class="form-group">
                      <label for="myme">About me:</label>
                      <textarea class="form-control h35" id="ta4" style="resize: none" name="sobremi"></textarea>
                    </div>
                    <div class="form-group">
                       <button class="cancelchanges" onclick="switchtoprofilenoedit()" name="button">Cancel edition</button>
                       <button class="savechanges" onclick="switchtoprofileedit()" name="button">Save changes</button>
                    </div>
                  </div>
                  <div class="col-lg-6">
                    <div class="form-group">
                      <label for="mypic">Foto:</label><br>
                      <img width="150px" height="150px" src="https://www.drupal.org/files/profile_default.jpg" alt="pic">
                    </div>
                    <div class="form-group">
                      <input id="fotoselect" type="file" name="pic" accept="image/*">
                    </div>
                  </div>
                </div>
            </div>


         </section>
        <script src="../public/js/mostrarNav.js"></script>
        <script src="../public/js/profile.js"></script>
    </body>
</html>
